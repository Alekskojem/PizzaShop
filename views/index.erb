<h2>Welcome to Pizza Shop</h2>

<div class='row'>

	<% @products.each do |p| %>
	
	<div class='col'>
		<%= p.title %>
	</div>
	
	<div>
		<img src='<%= p.path_to_image %>' />
	</div>
	
	<div>
		<%= p.description %>
	</div>
	
	<div>
		Size: <%= p.size %> sm
	</div>
	
	<div>
		price: <%= p.price %> grn
	</div>
	
	<div>
		<button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id %>)">Add to cart</button>
	</div>
</div>
<% end %>

</div>
